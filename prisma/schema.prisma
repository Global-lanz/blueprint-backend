generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projects  ClientProject[]
}

enum Role {
  ADMIN
  CLIENT
}

model Template {
  id        String    @id @default(cuid())
  name      String
  version   String
  tasks     Task[]
  projects  ClientProject[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  template    Template  @relation(fields: [templateId], references: [id])
  templateId  String
  subtasks    Subtask[]
  clientAnswers ClientTaskAnswer[]
}

model Subtask {
  id        String @id @default(cuid())
  description String
  task      Task   @relation(fields: [taskId], references: [id])
  taskId    String
  clientAnswers ClientSubtaskAnswer[]
}

model ClientProject {
  id        String     @id @default(cuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  template  Template   @relation(fields: [templateId], references: [id])
  templateId String
  progress  Float      @default(0)
  tasks     ClientTaskAnswer[]
  subtasks  ClientSubtaskAnswer[]
  stages    Stage[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model ClientTaskAnswer {
  id        String   @id @default(cuid())
  project   ClientProject @relation(fields: [projectId], references: [id])
  projectId String
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String
  answer    String
}

model ClientSubtaskAnswer {
  id        String   @id @default(cuid())
  project   ClientProject @relation(fields: [projectId], references: [id])
  projectId String
  subtask   Subtask  @relation(fields: [subtaskId], references: [id])
  subtaskId String
  answer    String
}

model Stage {
  id        String   @id @default(cuid())
  project   ClientProject @relation(fields: [projectId], references: [id])
  projectId String
  name      String
  values    StageValue[]
}

model StageValue {
  id       String @id @default(cuid())
  stage    Stage  @relation(fields: [stageId], references: [id])
  stageId  String
  content  String
}
