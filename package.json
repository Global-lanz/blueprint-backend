{
  "name": "blueprint-backend",
  "version": "0.1.0",
  "description": "BluePrint backend - NestJS + Prisma",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "start": "node dist/main.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init --preview-feature",
    "prisma:seed": "ts-node prisma/seed.ts",
    "lint": "eslint '{src,test}/**/*.{ts,js}' --fix",
    "test": "echo \"No tests yet\" && exit 0",
    "format": "prettier --write \"**/*.{ts,json,js,md}\""
  },
  "dependencies": {
    "@nestjs/platform-express": "^10.0.0",
    "express": "^4.18.2",
    "dotenv": "^16.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@prisma/client": "^5.0.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.0.0",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.19",
    "@types/dotenv": "^8.2.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/node": "^18.0.0",
    "@types/passport-jwt": "^3.0.7",
    "prisma": "^5.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}